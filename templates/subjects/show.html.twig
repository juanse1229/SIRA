{% extends 'base.html.twig' %}

{% block title %}Subjects{% endblock %}

{% block body %}
    <h1>Subjects</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subject.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ subject.name }}</td>
            </tr>
            <tr>
                <th>Credits</th>
                <td>{{ subject.credits }}</td>
            </tr>
            <tr>
                <th>Semester</th>
                <td>{{ subject.semester }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ subject.createdAt ? subject.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ subject.updatedAt ? subject.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_subjects_index') }}">back to list</a>

    <a href="{{ path('app_subjects_edit', {'id': subject.id}) }}">edit</a>

    {{ include('subjects/_delete_form.html.twig') }}
{% endblock %}
