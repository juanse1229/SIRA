{% extends 'base.html.twig' %}

{% block title %}Careers index{% endblock %}

{% block body %}
    <h1>Careers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CareerName</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for career in careers %}
            <tr>
                <td>{{ career.id }}</td>
                <td>{{ career.careerName }}</td>
                <td>{{ career.createdAt ? career.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ career.updatedAt ? career.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_careers_show', {'id': career.id}) }}">show</a>
                    <a href="{{ path('app_careers_edit', {'id': career.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_careers_new') }}">Create new</a>
{% endblock %}
